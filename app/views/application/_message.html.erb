<script type="text/javascript">
  $(function(){
        setTimeout(function(){
                $('.left_balloon').removeClass("animated slideInRight");
		$('.left_balloon').addClass("animated flipOutX");
	}, 9000);
 });
</script>

<% if @message %>
<p class="left_balloon animated slideInRight">
<img src="someone.png" id="someone">
<%= @message %>
</p>
<% end %>
