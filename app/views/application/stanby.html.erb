<script type="text/javascript">
function get_status(){
    $.ajax({
      url: '/master/get_status',
      type: 'GET',
      success: function(json){
        if(json.status == "playing"){
          window.location.href = "/master/index";
        }
      }
    });
    setTimeout(get_status, 1000);
}

$(function(){
  get_status();

});
</script>


