<script type="text/javascript">


function refresh(){
    $.ajax({
    	url: '/get_cheers',
        type: 'GET'
    });
    setTimeout(refresh, 1000);
}

$(function(){
  $('h1').css('color','orange');

  $(document).snowfall({
  	image: "heart.png",
	flakeCount: 5,
	minSize: 60,
	maxSize: 70,
	round: false,
  });

  refresh();
 
});

</script>

<p class="wakarimi_count heart">
<span id="counter">
<%= render :partial =>  "count" %>
</span>
</p>
<br />
<br />
<div class="marquee">
	<p>現在　<%= @now_playing_user.player_name %>　がプレイ中です。</p>
</div>
